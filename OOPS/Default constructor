#include<iostream>
using namespace std;
class Car{
    public:
        string brand;
        int speed;

//this constructor gets called automatically when object is created.
        Car(){
            brand="Unknown";
            speed=0;
            cout<<"Default constructor called";
        }

        void display(){
            cout<<"Brand:"<<brand<<" "<<"Speed:"<<speed;
        }
};
int main(){
    Car mycar;   //constructor is called automatically
    mycar.display();
    return 0;
}
